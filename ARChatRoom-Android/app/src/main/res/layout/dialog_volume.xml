<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_function_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/volume_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/white_close"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:id="@+id/music_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:src="@drawable/music_open"/>

        <TextView
            android:id="@+id/music_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@+id/music_icon"
            android:text="音乐声"
            android:layout_marginLeft="@dimen/dp_44"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/music_bar"
            android:layout_width="@dimen/dp_243"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_toRightOf="@+id/music_icon"
            android:layout_marginTop="@dimen/dp_10"
            android:max="100"
            android:progress="40"
            android:layout_below="@+id/music_text"
            android:maxHeight="@dimen/dp_5"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@drawable/circle"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:id="@+id/volume_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:src="@drawable/volume_open"/>

        <TextView
            android:id="@+id/volume_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@+id/volume_icon"
            android:text="人声"
            android:layout_marginLeft="@dimen/dp_44"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/volume_bar"
            android:layout_width="@dimen/dp_243"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_toRightOf="@+id/volume_icon"
            android:layout_marginTop="@dimen/dp_10"
            android:max="100"
            android:progress="60"
            android:layout_below="@+id/volume_text"
            android:maxHeight="@dimen/dp_5"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@drawable/circle"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:id="@+id/ear_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:src="@drawable/ear_close"/>

        <TextView
            android:id="@+id/ear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_toRightOf="@+id/ear_icon"
            android:text="耳返"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <SeekBar
            android:id="@+id/ear_bar"
            android:layout_width="@dimen/dp_243"
            android:layout_height="@dimen/dp_30"
            android:maxHeight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_toRightOf="@+id/ear_icon"
            android:layout_marginTop="@dimen/dp_10"
            android:max="100"
            android:progress="0"
            android:layout_below="@+id/ear_text"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@drawable/circle"/>
    </RelativeLayout>
</LinearLayout>